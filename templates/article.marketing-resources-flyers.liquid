<script defer src="{{ 'marketingResources.js' | asset_url }}"></script>
{{ 'marketingResources.css' | asset_url | stylesheet_tag }}
<div class="main-wrapper-container" id="main-content">
    <div class="main-wrapper">
        <div class="breadcrumb l-wrapper visible-md visible-lg">
            <a data-translate="general.breadcrumbs.home" href="/">Home</a>
            <span class="arrow">/</span><a href="/pages/distributor-resources"><span>Distributor Resources</span></a>
            <span class="arrow">/</span><span>{{ article.title }}</span>
        </div>
        <header class="page-header">
            <h1>{{ article.title }}</h1>
        </header>
        <div id="flyers-panel">
            <div class="blog-detail">
                <div class="rte">
                    {{ article.content }}
                </div>
            </div>
            <div class="blog-side hide">
                <h2 class="shop-the-look">Products in this Display</h2>
                <section class="article-product">
                    {% for tag in article.tags %} {% assign product = all_products[{{tag}}] %} {% include 'product-grid-item_verticle' %} {% endfor %}
                </section>
            </div>
        </div>
    </div>
</div>

<style>
#flyers-panel {
    display: flex;
}
  div#flyers-panel .grid-product__meta {
    margin-top: .5rem;
}
div#flyers-panel .grid-product__title {
    min-height: auto;
    padding: 0 0 0 0;
}
div#flyers-panel .grid-product__price-wrap {
    display: none;
}
.blog-side {
    width: 20%;
    padding-left: 20px;
}
.blog-detail {
    width: 80%;
    padding-right: 20px;
    border-right: 1px solid #b7b7b7;
}
.article-product>div {
    margin-bottom: 2rem;
}
</style>


 <script type="text/javascript">
   $(document).ready(function(){       
     initMarketingResourcesFlyers();     
   });
 </script>     
