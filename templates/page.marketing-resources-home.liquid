	document.addEventListener('DOMContentLoaded', function () {
		const filterButtons = document.querySelectorAll('.filter-categories .filter');
		const displayCards = document.querySelectorAll('.displayListing');

		filterButtons.forEach((button) => {
			button.addEventListener('click', function () {
