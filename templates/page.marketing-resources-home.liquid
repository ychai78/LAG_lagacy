<script>
	document.addEventListener('DOMContentLoaded', function () {
		const sortOptions = document.querySelectorAll('.sortOption');
		const sortText = document.getElementById('sortText');
		const displayGrid = document.getElementById('displayListing-grid');

		function sortByAttribute(attribute, order = 'asc') {
			const displayCards = Array.from(displayGrid.children);
			displayCards.sort((a, b) => {
				const valueA = a.getAttribute(attribute) || '';
				const valueB = b.getAttribute(attribute) || '';

				// Check if the attribute value is numeric or not
				if (!isNaN(valueA) && !isNaN(valueB)) {
					return order === 'asc' ? Number(valueA) - Number(valueB) : Number(valueB) - Number(valueA); // Numeric sorting
				} else {
					return order === 'asc' ? valueA.localeCompare(valueB) : valueB.localeCompare(valueA); // Alphabetic sorting
				}
			});

			// Reorder the display grid
			displayGrid.innerHTML = ''; // Clear the current display grid
			displayCards.forEach((card) => displayGrid.appendChild(card)); // Append sorted cards
		}

		function sortNewestToOldest() {
			const displayCards = Array.from(displayGrid.children);

			// Sort by data-callout first, prioritize items with callouts (not 'null'), and then by data-displaynumber
			displayCards.sort((a, b) => {
				const calloutA = a.getAttribute('data-callout') || 'null';
				const calloutB = b.getAttribute('data-callout') || 'null';
				const displayNumberA = a.getAttribute('data-displaynumber') || '';
				const displayNumberB = b.getAttribute('data-displaynumber') || '';

				if (calloutA !== 'null' && calloutB === 'null') {
					return -1; // A should come before B if A has a callout and B doesn't
				}
				if (calloutA === 'null' && calloutB !== 'null') {
					return 1; // B should come before A if B has a callout and A doesn't
				}
				// If both have or don't have callouts, sort by display number in descending order
				return displayNumberB.localeCompare(displayNumberA, undefined, { numeric: true });
			});

			// Reorder the display grid
			displayGrid.innerHTML = ''; // Clear the current display grid
			displayCards.forEach((card) => displayGrid.appendChild(card)); // Append sorted cards
		}

		// Apply the default sorting on page load (Newest to Oldest)
		sortNewestToOldest();
		sortText.textContent = 'Newest to Oldest';

		sortOptions.forEach((option) => {
			option.addEventListener('click', function (event) {
				event.preventDefault(); // Prevent the default link behavior
				const selectedText = this.textContent;
				sortText.textContent = selectedText;

				const sortBy = this.getAttribute('data-sort-by');
				switch (sortBy) {
					case 'newest-to-oldest':
						sortNewestToOldest();
						break;
					case 'data-title':
						sortByAttribute('data-title');
						break;
					case 'data-displaynumber':
						sortByAttribute('data-displaynumber');
						break;
					default:
						break;
                    
				}
			});
		});
	});

  
</script>

<script>
	document.addEventListener('DOMContentLoaded', function () {
		var searchInput = document.getElementById('display-search');
		var searchResults = document.getElementById('search-results');
		var displaysData = document.getElementById('displays-data');

		var displays;
		try {
			displays = JSON.parse(displaysData.textContent).displays;
			console.log('Displays loaded:', displays.length);
		} catch (error) {
			console.error('Error parsing displays data:', error);
			return;
		}

		searchInput.addEventListener('input', function () {
			var searchTerm = this.value.toLowerCase();

			if (searchTerm.length < 2) {
				searchResults.innerHTML = '';
				return;
			}

			var results = displays.filter(function (display) {
				return (
					display.display_number.toLowerCase().includes(searchTerm) || display.name.toLowerCase().includes(searchTerm)
				);
			});

			if (results.length === 0) {
				searchResults.innerHTML = '<p>No results found</p>';
			} else {
				var html = '<ul class="search-results-list">';
				for (var i = 0; i < results.length; i++) {
					html +=
						'<li class="p-4 border-b search-result-item border-gray">' +
						'<a href="/pages/marketing-resources/' +
						results[i].handle +
						'" class="flex items-center gap-4">' +
						'<img src="' +
						results[i].image +
						'" alt="' +
						results[i].name +
						'" class="search-result-image">' +
						'<div class="search-result-details">' +
						'<span class="search-result-number">' +
						results[i].display_number +
						'</span>' +
						'<span class="search-result-name">' +
						results[i].name +
						'</span>' +
						'</div>' +
						'</a></li>';
				}
				html += '</ul>';
				searchResults.innerHTML = html;
			}

			// Add blur event listener to close search results
			searchInput.addEventListener('blur', function () {
				// Use setTimeout to delay the closing of results
				// This allows time for a click on the results to register
				setTimeout(function () {
					searchResults.innerHTML = '';
				}, 100);
			});

			// Prevent results from closing when clicking inside the results container
			searchResults.addEventListener('mousedown', function (e) {
				e.preventDefault();
			});
		});
	});
</script>
