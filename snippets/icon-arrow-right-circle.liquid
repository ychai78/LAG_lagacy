{% comment %}
	Renders a play icon

	Usage:
	   {% render 'icon-play',  class: 'w-[75px] h-[75px]' %}
	%}
{% endcomment %}

{%- liquid
	if class == null
		assign class = 'size-5'
	else
		assign class = class
	endif
-%}

<svg
	class="{{ class }} rtl:rotate-180"
	fill="none"
	stroke="currentColor"
	viewBox="0 0 24 24"
	xmlns="http://www.w3.org/2000/svg"
>
	<path d="M9 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path>
</svg>
