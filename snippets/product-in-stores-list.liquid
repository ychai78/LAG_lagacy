      <span class="available-in-stores-header"> Available in select stores</span>
    </div>
    <div class="availability-container">
      
      <div class="available-store-list">
        <div class="store-name-alt"> 
          {% for store in stores %}
            <div class="store-name">{{ store.name | escape }}</div>
            {% endfor %}
        </div>
        <div class="availability-notice-message-wrapper">
          <span class="availability-notice-message"> Please call individual stores for availability of product as product selection may vary by store.</span>
        </div>
      </div>
    </div>
  </div> 
{% endif %}








