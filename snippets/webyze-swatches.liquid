{% for opt in product.options %}
	{% assign opt_name = opt | downcase %}
	{% assign opt_index = forloop.index0 %}
	{% if opt_name == 'color' or opt_name == 'colour' or opt_name == 'material' or opt_name == 'finish' %}
		{% assign swatch_list = '' %}
		{% capture swatch_list %}{% for vari in product.variants %}{{ vari.options[ opt_index ] | url_param_escape }}{% unless forloop.last %}|{% endunless %}{% endfor %}{% endcapture %}
		<script src="//www.webyze.com/Swatches/{{ shop.permanent_domain }}|{{ product.id }}|{{ opt_index }}|{{ swatch_list | replace: '?','%2F' | url_param_escape }}" type="text/javascript"></script>
	{% endif %}
{% endfor %}